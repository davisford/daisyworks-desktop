<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo" minHeight="50">

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>

	<fx:Metadata>[HostComponent("spark.components.SkinnableContainer")]</fx:Metadata>

	<s:Rect width="{hostComponent.width}" height="{hostComponent.height}" radiusX="10" radiusY="10">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#CCE5E9" ratio="0" alpha="1"/>
				<s:GradientEntry color="#D0E1E8" ratio="0.3" alpha="1"/>
				<s:GradientEntry color="#D0E1E8" ratio="1" alpha="0"/>
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:LinearGradientStroke>
				<s:GradientEntry color="#AFBABE" ratio="0.3" alpha="1"/>
				<s:GradientEntry color="#AFBABE" ratio="1" alpha="0"/>
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>

	<s:Group id="contentGroup"
			 left="1"
			 right="1"
			 top="1"
			 bottom="1">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" paddingLeft="10"/>
		</s:layout>
	</s:Group>

	<s:filters>
		<s:DropShadowFilter color="#FFFFFF"
							blurX="1"
							blurY="1"
							angle="90"
							distance="2"
							alpha="0.8"/>
	</s:filters>

</s:Skin>
