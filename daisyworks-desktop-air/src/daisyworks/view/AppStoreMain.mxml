	</s:layout>
	<fx:Declarations>
		
	</fx:Declarations>
	<s:HGroup width="100%" height="35">
	</s:HGroup>
	<s:List id="tileList"
			itemRenderer="daisyworks.view.AppRenderer"
		    left="0" right="0" top="0" bottom="0">
		<s:layout>
			<s:TileLayout horizontalGap="5"
						  verticalGap="10"
						  horizontalAlign="center"
						  verticalAlign="middle"
						  orientation="rows"/>
		</s:layout>
		<s:dataProvider>
			<s:XMLListCollection>
				<fx:XMLList xmlns="">
					<bundle>
						<name>Daisy Shell</name>
