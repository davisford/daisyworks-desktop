							<installed>true</installed>
							<url>file:///c:/foo/bar</url>
						</installation>
					</bundle>
					<bundle>
						<name>Daisy Servo</name>
						<description>Control the servo with the daisy</description>
						<installation>
							<installed>true</installed>
							<url>file:///c:/foo/bar</url>
						</installation>
					</bundle>
					<bundle>
						<name>Daisy Power Switch</name>
						<description>Toggle power on/off and use a slider to control power.</description>
						<installation>
							<installed>true</installed>
							<url>file:///c:/foo/bar</url>
						</installation>
					</bundle>
					<bundle>
						<name>Daisy Plant Monitor</name>
						<description>Track moisture level of your plants.</description>
						<installation>
							<installed>true</installed>
							<url>file:///c:/foo/bar</url>
						</installation>
					</bundle>
				</fx:XMLList>
			</s:XMLListCollection>
		</s:dataProvider>
	</s:List>
</s:Group>
