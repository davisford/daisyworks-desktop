<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<s:layout>
		<s:VerticalLayout paddingTop="15" paddingLeft="15" paddingRight="15" paddingBottom="15"/>
	</s:layout>


	<fx:Script>
		<![CDATA[
			import daisyworks.event.AppStoreEvent;
			protected function searchBox_keyDownHandler(event:KeyboardEvent):void
			{
				if(event.keyCode == Keyboard.ENTER) {
					dispatchEvent(new AppStoreEvent(AppStoreEvent.SEARCH, searchBox.text));
				}
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:Form width="100%" x="10" y="30">
		<mx:FormItem label="Search AppStore" width="100%">
			<s:TextInput id="searchBox" width="100%" keyDown="searchBox_keyDownHandler(event)"/>
		</mx:FormItem>
		<mx:FormItem width="100%">
		</mx:FormItem>
	</mx:Form>
	<mx:LinkButton label="Import a Local App &gt;&gt;" color="#3A69D3" textDecoration="underline" width="100%" textAlign="right"/>
	<mx:FormItem width="100%">
		<mx:LinkButton label="Submit an App &gt;&gt;" width="100%" textAlign="right" color="#3A69D3" textDecoration="underline"/>
	</mx:FormItem>
</s:Group>
