<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Metadata>
		[Event(name="appSelected")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import daisyworks.event.AppStoreEvent;
			
			import mx.collections.XMLListCollection;
			
			import spark.events.IndexChangeEvent;
			
			[Bindable]
			public var selected:XML;
			
			[Bindable]
			public var results:XMLListCollection;
			
			[PostConstruct]
			public function init() {
				dispatchEvent(new AppStoreEvent(AppStoreEvent.SEARCH, ""));
			}

			protected function tileList_changeHandler(event:IndexChangeEvent):void
			{
				dispatchEvent(new Event("appSelected"));
			}
			
			[EventHandler(event="AppStoreEvent.RESULTS", properties="results")]
			public function onResults(xmlList:XMLListCollection):void {
				results = xmlList;
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="100%" height="35" verticalAlign="middle" textAlign="center" horizontalAlign="center">
		<s:Label text="Featured Apps" fontSize="18" textDecoration="underline"/>
	</s:HGroup>
	<s:List id="tileList"
			itemRenderer="daisyworks.view.AppRenderer"
			left="0" right="0" top="0" bottom="0" width="100%" height="100%" borderVisible="false"
			dataProvider="{results}"
			change="tileList_changeHandler(event)">
		<s:layout>
			<s:TileLayout horizontalGap="5"
						  verticalGap="10"
						  horizontalAlign="center"
						  verticalAlign="middle"
						  orientation="rows"/>
		</s:layout>
	</s:List>
	<s:HGroup width="100%" height="35" verticalAlign="middle" textAlign="center" horizontalAlign="center" paddingRight="10" paddingLeft="10">
		<s:Button label="&lt;&lt;" width="35"/>
		<s:Button label="&lt;" width="33"/>
		<s:Label text="Showing 4 of 75 Applications"/>
		<s:Button label="&gt;" width="33"/>
		<s:Button label="&gt;&gt;" width="35" height="20" x="1150"/>
	</s:HGroup>
</s:Group>
