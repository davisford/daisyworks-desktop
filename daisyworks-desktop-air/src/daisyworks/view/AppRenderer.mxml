<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="224" height="175">
	<s:layout>
		<s:VerticalLayout paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import daisyworks.model.Icons;
			
			[Bindable]
			private var node:XML;
			
			override public function set data(value:Object):void {
				super.data = value;
				node = XML(data);
			}
		]]>
	</fx:Script>
	
	<s:Label id="nameLabel" text="{node.name}" height="20" left="3" right="3" width="100%" verticalAlign="middle" textAlign="center" fontWeight="bold" fontSize="14"/>
	<s:Label id="authorLabel" text="{node.author}" verticalAlign="middle" textAlign="left"  fontStyle="italic"/>
	<s:RichText id="description" text="{node.description}" height="100%" left="3" right="3" bottom="55" width="100%" maxDisplayedLines="-1"/>
	
</s:ItemRenderer>
