<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="228" height="190">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import daisyworks.model.Icons;
			
			[Bindable]
			private var node:XML;
			
			override public function set data(value:Object):void {
				super.data = value;
				node = XML(data);
			}
		]]>
	</fx:Script>
	
	<s:Label id="nameLabel" y="5" text="{node.name}" height="20" left="3" right="3" width="100%"/>
	<mx:Image id="downloadImage" y="33" source="{Icons.APP_DOWNLOAD}" left="3"/>
	
	<s:RichText id="description" text="{node.description}" height="100%" left="3" right="3" bottom="3" width="100%"/>
	
</s:ItemRenderer>
